<div class="panel panel-default">
  <div class="panel-heading">メッセージ一覧</div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span style="font-weight: bold;"><%= message.name %></span> : <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<hr>

<%= form_for(@message) do |f| %>
  <p>名前 : <%= f.text_field :name %></p>
  
  <p>内容 : <br><%= f.text_area :body, :size => "30x3", :maxlength => "100" %></p>
  <%= f.submit %>
<% end %>